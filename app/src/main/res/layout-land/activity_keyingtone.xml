<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.keyingtone.KeyingToneActivity">

    <TextView
        android:id="@+id/title_keyingtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text="@string/title_keyingtone"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/bg_rect"
        android:layout_width="@dimen/width_600dp"
        android:layout_height="@dimen/height_120dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/keyingtone_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/bg_rect"
        app:layout_constraintEnd_toEndOf="@id/bg_rect"
        app:layout_constraintStart_toStartOf="@+id/bg_rect"
        app:layout_constraintTop_toTopOf="@+id/bg_rect"
        tools:ignore="MissingConstraints">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/keyingtone_open"
            android:layout_width="@dimen/width_180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/keyingtone_radio_button"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/keyingtone_open" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/keyingtone_close"
            android:layout_width="@dimen/width_180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:background="@drawable/keyingtone_radio_button"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/keyingtone_close" />
    </RadioGroup>

